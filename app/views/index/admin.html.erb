    <div class='rooms'>
      <div class='room template' style='display: none;'>
        <span class='pre'><a class='code'></a><span class='sub_id'></span></span>
        <span class='started'></span>
        - 
        <span class='duration'></span>
      </div>
    </div>
  </div>
</div>
